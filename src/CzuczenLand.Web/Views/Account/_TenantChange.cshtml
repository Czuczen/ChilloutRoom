@using CzuczenLand.Web.Helpers
@model CzuczenLand.Web.Models.Account.TenantChangeViewModel
@using (Html.BeginScripts())
{
    <script src="@Url.Content("~/Views/Account/_TenantChange.js")" type="text/javascript"></script>
}
<div class="card tenant-change-component m-b-3px">
    <div class="body text-center">
        <span>
            Aktualny najemca:

            @if (Model.Tenant != null)
            {
                <span title="@Model.Tenant.Name"><strong>@Model.Tenant.TenancyName</strong></span>
            }
            else
            {
                <span>Nie wybrany</span>
            }

            (<a href="#" data-toggle="modal" data-target="#TenantChangeModal">Zmień</a>)
        </span>
    </div>
</div>
<div class="modal fade" id="TenantChangeModal" tabindex="-1" role="dialog" aria-labelledby="UserCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            
        </div>
    </div>
</div>
