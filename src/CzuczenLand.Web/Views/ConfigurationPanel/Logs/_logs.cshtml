                    {
                        <div class="border-inset border-color-chocolate m-5 p-5">
                            @{
                                foreach (var line in log)
                                {
                                    <div>@line</div>
                                }
                            }
                        </div>
                    }    
                }
                else
                {
                    <div class="border-inset m-5 p-5">Brak</div>
                }
            </div>
        </div>
        
        <div id="warnLogs" class="text-center border-groove">
            <a class="fa-2x cursor-pointer" data-toggle="collapse" data-target="#collapse-warnLogs" aria-expanded="true" aria-controls="collapseAria-warnLogs">
                Warn
            </a>
            <div id="collapse-warnLogs" class="collapse text-left" aria-labelledby="heading-warnLogs">
                @if (Model.WarnLogs.Any())
                {
                    foreach (var log in Model.WarnLogs)
                    {
                        <div class="border-inset border-color-chocolate m-5 p-5">
                            @{
                                foreach (var line in log)
                                {
                                    <div>@line</div>
                                }
                            }
                        </div>
                    }    
                }
                else
                {
                    <div class="border-inset m-5 p-5">Brak</div>
                }
