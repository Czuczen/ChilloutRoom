                Error
            </a>
            <div id="collapse-errorLogs" class="collapse text-left" aria-labelledby="heading-errorLogs">
                @if (Model.ErrorLogs.Any())
                {
                    foreach (var log in Model.ErrorLogs)
                    {
                        <div class="border-inset border-color-chocolate m-5 p-5">
                            @{
                                foreach (var line in log)
                                {
                                    <div>@line</div>
                                }
                            }
                        </div>
                    }    
                }
                else
                {
                    <div class="border-inset m-5 p-5">Brak</div>
                }
            </div>
        </div>

        <div class="text-center ">
            <button id="closeCheckLogsModalBtn" type="button" class="btn bg-c-green-imp width-100 btn-default waves-effect" data-dismiss="modal">Ok</button>
        </div>
    }
    else
    {
        <h1 class="text-center">@Model.PermissionInfo</h1>
    }
</div>
